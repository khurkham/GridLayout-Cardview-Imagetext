<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margintop"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="khurkham.com.android.tailearn.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round"
                android:src="@drawable/b1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round"
                android:src="@drawable/b2" />

            <ImageView
                android:id="@+id/btn3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round"
                android:src="@drawable/b3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />


            <ImageView
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn1"
                android:layout_alignTop="@+id/btn5"
                android:background="@drawable/round"
                android:src="@drawable/b4" />

            <ImageView
                android:id="@+id/btn5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn2"
                android:layout_below="@+id/btn2"
                android:layout_marginTop="15dp"
                android:background="@drawable/round"
                android:src="@drawable/b5" />

            <ImageView
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn3"
                android:layout_alignTop="@+id/btn5"
                android:background="@drawable/round"
                android:src="@drawable/b6" />

            <ImageView
                android:id="@+id/btn7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn4"
                android:layout_below="@+id/btn4"
                android:layout_marginTop="17dp"
                android:background="@drawable/round"
                android:src="@drawable/b7" />

            <ImageView
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn5"
                android:layout_alignTop="@+id/btn7"
                android:background="@drawable/round"
                android:src="@drawable/b8" />

            <ImageView
                android:id="@+id/btn9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn6"
                android:layout_alignTop="@+id/btn8"
                android:background="@drawable/round"
                android:src="@drawable/b9" />

            <ImageView
                android:id="@+id/btn10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn7"
                android:layout_below="@+id/btn7"
                android:layout_marginTop="14dp"
                android:background="@drawable/round"
                android:src="@drawable/b10" />

            <ImageView
                android:id="@+id/btn11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn8"
                android:layout_alignTop="@+id/btn10"
                android:background="@drawable/round"
                android:src="@drawable/b11" />

            <ImageView
                android:id="@+id/btn12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn9"
                android:layout_alignTop="@+id/btn11"
                android:background="@drawable/round"
                android:src="@drawable/b12" />

            <ImageView
                android:id="@+id/btn13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn10"
                android:layout_below="@+id/btn10"
                android:layout_marginTop="17dp"
                android:background="@drawable/round"
                android:src="@drawable/b13" />

            <ImageView
                android:id="@+id/btn14"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn11"
                android:layout_alignTop="@+id/btn13"
                android:background="@drawable/round"
                android:src="@drawable/b14" />

            <ImageView
                android:id="@+id/btn15"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn12"
                android:layout_alignTop="@+id/btn14"
                android:background="@drawable/round"
                android:src="@drawable/b15" />

            <ImageView
                android:id="@+id/btn16"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn13"
                android:layout_below="@+id/btn13"
                android:layout_marginTop="17dp"
                android:background="@drawable/round"
                android:src="@drawable/b16" />

            <ImageView
                android:id="@+id/btn17"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn14"
                android:layout_alignTop="@+id/btn16"
                android:background="@drawable/round"
                android:src="@drawable/b17" />

            <ImageView
                android:id="@+id/btn18"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn15"
                android:layout_alignTop="@+id/btn17"
                android:background="@drawable/round"
                android:src="@drawable/b18" />

            <ImageView
                android:id="@+id/btn19"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btn17"
                android:layout_below="@+id/btn17"
                android:layout_marginTop="15dp"
                android:background="@drawable/round"
                android:src="@drawable/b19" />


        </RelativeLayout>
    </ScrollView>



</LinearLayout>